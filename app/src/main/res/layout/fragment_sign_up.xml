<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/app_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Shoe App - Create Account"
                android:textColor="@color/text_color_white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_textInput"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_55"
                android:layout_below="@id/app_heading"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/editext_rounded"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColorHint="@color/transparentColorPrimary"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:id="@+id/signUp_editText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/standard_55"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="Username "
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordToggle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/username_textInput"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/editext_rounded"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColorHint="@color/transparentColorPrimary"
                app:passwordToggleTint="@color/text_color_white">

                <EditText
                    android:id="@+id/signUp_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textColorHint="@color/transparentColorPrimary"
                    android:textSize="18sp"
                    app:hintTextAppearance="@style/TextLabel" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_password_toggle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/passwordToggle"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/editext_rounded"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColorHint="@color/transparentColorPrimary"
                app:passwordToggleTint="@color/text_color_white">

                <EditText
                    android:id="@+id/confirm_signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textColorHint="@color/transparentColorPrimary"
                    android:textSize="18sp"
                    app:hintTextAppearance="@style/TextLabel" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_55"
                android:layout_below="@id/confirm_password_toggle"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_background"
                android:text="SignUp"
                android:textAllCaps="false"
                android:textColor="@color/text_color_white" />

            <TextView
                android:id="@+id/already_have_a_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signUpButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Already Have a Account Login"
                android:textColor="@color/text_color_white"
                android:textSize="16sp" />
        </RelativeLayout>
    </FrameLayout>
</layout>