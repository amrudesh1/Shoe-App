<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/holo_blue_light">

    <ImageView
        android:id="@+id/shoeImage"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/shoe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/shoeImage"
        android:text="Shoe Name"
        android:textColor="@color/text_color_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shoe_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoe_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/shoeImage"
        android:text="Shoe Size"
        android:textColor="@color/text_color_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shoe_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoe_size"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/shoeImage"
        android:text="Shoe Brand"
        android:textColor="@color/text_color_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shoe_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shoe_brand"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toEndOf="@id/shoeImage"
        android:text="Shoe Description"
        android:textColor="@color/text_color_white"
        android:textStyle="bold" />


</RelativeLayout>